@model InternetServicesProvider.Entities.Customer
@{
    ViewData["Title"] = "Details";
}
<div class="card" style="width:100%; margin-top:10px;">
    <div class="card-header bg-dark text-white">
        <h5>Internet Services Customer Details </h5>
    </div>
    <div class="card-body">
        <table class="table table-borderless">
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(m => m.CustomerId)</b>
                </td>
                <td>@Html.DisplayFor(m => m.CustomerId)</td>
                <td>
                    <b>@Html.DisplayNameFor(m => m.UserName)</b>
                </td>
                <td>@Html.DisplayFor(m => m.UserName)</td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(m => m.PhoneNumber)</b>
                </td>
                <td>@Html.DisplayFor(m => m.PhoneNumber)</td>
                <td>
                    <b>@Html.DisplayNameFor(m => m.Address)</b>
                </td>
                <td>@Html.DisplayFor(m => m.Address)</td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(m => m.Email)</b>
                </td>
                <td>@Html.DisplayFor(m => m.Email)</td>
                <td>
                    <b>@Html.DisplayNameFor(m => m.Age)</b>
                </td>
                <td>@Html.DisplayFor(m => m.Age)</td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(m => m.Region)</b>
                </td>
                <td>@Html.DisplayFor(m => m.Region)</td>
                <td>
                    <b>@Html.DisplayNameFor(m => m.BusinessType)</b>
                </td>
                <td>@Html.DisplayFor(m => m.BusinessType)</td>
            </tr>
        </table>
        <p>
            @Html.ActionLink("Back To Home", "Index", "Home", new { @class = "btn btn-primary" })
        </p>
    </div>
</div>